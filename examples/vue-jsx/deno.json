{
  "$schema": "https://github.com/denoland/deno/blob/main/cli/schemas/config-file.v1.json",
  "tasks": {
    "start": "deno run --sloppy-imports -P --allow-read index.ts"
  },
  "permissions": {
    "default": {
      "env": true,
      "ffi": true
    }
  },
  "unstable": [
    "raw-imports"
  ]
}